            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="85*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="1" Text="?" TextWrapping="NoWrap"
                   VerticalAlignment="Center" RenderTransformOrigin="0.71,2.508" FontSize="36"
                   MouseDown="TextBlock_MouseDown" />

        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" Text="?" TextWrapping="NoWrap"
